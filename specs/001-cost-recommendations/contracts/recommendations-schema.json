{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pulumicost Recommendations API",
  "type": "object",
  "properties": {
    "summary": {
      "type": "object",
      "properties": {
        "total_count": { "type": "integer", "minimum": 0 },
        "total_savings": { "type": "number", "minimum": 0 },
        "currency": { "type": "string" },
        "count_by_action_type": {
          "type": "object",
          "additionalProperties": { "type": "integer" }
        }
      },
      "required": ["total_count", "total_savings", "currency"]
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "resource_id": { "type": "string" },
          "action_type": { "type": "string" },
          "description": { "type": "string" },
          "estimated_savings": { "type": "number", "minimum": 0 },
          "currency": { "type": "string" }
        },
        "required": ["resource_id", "action_type", "description", "estimated_savings", "currency"]
      }
    }
  },
  "required": ["summary", "recommendations"]
}
